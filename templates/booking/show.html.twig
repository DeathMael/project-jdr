{% extends '@EasyAdmin/default/layout.html.twig' %}

{% block title %}Booking{% endblock %}

{% block body %}
<div class="container mb-5 mt-5">
    <div class="row">
        <!-- Grid row -->

        <div class="col-md-6 offset-md-3">
    <div class="card text-white text-center mt-5">
            <h1>Événements</h1>
    <div class="card-body mx-4 text-center">
    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ booking.title }}</td>
            </tr>
            <tr>
                <th>Débute le</th>
                <td>{{ booking.beginAt ? booking.beginAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fini le</th>
                <td>{{ booking.endAt ? booking.endAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ booking.description }}</td>
            </tr>
        </tbody>
    </table>


                        {% if is_granted('ROLE_USER') %}
                            <a class="btn btn-dark mb-2" href="{{ path('booking_calendar') }}">Calendrier</a>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <a class="btn btn-dark mb-2" href="{{ path('easyadmin', {entity: 'Booking', action: 'list'}) }}">Liste des événements</a>
                        <a class="btn btn-dark mb-2" href="{{ path('easyadmin', {entity: 'Booking', action: 'edit', id: (booking.id)}) }}">Modifier</a>

                        {{ include('booking/_delete_form.html.twig') }}
                        {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
