{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('booking_new') }}">Créer un nouvel évènement</a>

    <div class="container"><div id="calendar-holder"></div></div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fullcalendar/core@4.1.0/main.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fullcalendar/daygrid@4.1.0/main.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fullcalendar/timegrid@4.1.0/main.min.css">
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/@fullcalendar/core@4.1.0/main.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@fullcalendar/interaction@4.1.0/main.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@fullcalendar/daygrid@4.1.0/main.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@fullcalendar/timegrid@4.1.0/main.min.js"></script>
    <script src="fullcalendar/core/main.js"></script>
    <script src="fullcalendar/google-calendar/main.js"></script>
    <script src='fullcalendar/locale-all.js'></script>
    <script type="text/javascript">
            var initialLocaleCode = 'fr';
            document.addEventListener('DOMContentLoaded', () => {
            var calendarEl = document.getElementById('calendar-holder');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                locale: initialLocaleCode,
                contentHeight: 750,
                defaultView: 'dayGridMonth',
                editable: true,
                eventSources: [
                    {
                        url: "{{ path('fc_load_events') }}",
                        method: "POST",
                        extraParams: {
                            filters: JSON.stringify({})
                        },
                        failure: () => {
                            // alert("There was an error while fetching FullCalendar!");
                        },
                    },

                ],
                customButtons: {
                    sync: {
                        text: 'sync',
                        click: function() {
                            window.location.replace("../project");
                        }
                    }
                },
                header: {
                    left: 'prev,next today sync',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay',
                },
                buttonText: {

                today:    'aujourd\'hui',
                month:    'mois',
                week:     'semaine',
                day:      'jour',
                list:     'liste'
        },
                lang:   'fr',
                plugins: [ 'interaction', 'dayGrid', 'timeGrid', 'googleCalendarPlugin' ], // https://fullcalendar.io/docs/plugin-index
                googleCalendarApiKey: 'AIzaSyCs6eOxw1giEc4J5PHwWJbF0dR_YlWgUX8',
                events:[{
                    googleCalendarId: '5n7hqradvrj6so45ghg28ifpd8@group.calendar.google.com',
                    eventBackgroundColor: '#212121',
                    rendering: 'background',

                }],

                timeZone: 'Europe/Paris',
            });
            calendar.render();
        });
    </script>
{% endblock %}